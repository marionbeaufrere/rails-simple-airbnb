<h2 class="text-center"> All our Flats (<%= @flats.length %>) </h2>
  <div class = "container">
    <div class="container" id="home-flats">
      <h4 class="text-center">You searched for . We found x flats out of x on our website.</h4>
      <div class="row">
        <% @flats.each do |flat| %>
          <div class="col-xs-12 col-sm-4 col-md-3">
            <div class="flat-card">
             <!--   image_tag("'https://unsplash.com/photos/OrhRN2yhlos", height: '32', width: '32') -->
              <div class="flat-card-content">
                <h3><%= link_to flat.name, flat %></h3>
                <div class="card-category"> <%= flat.address %> </div>
                <p> <i class="fas fa-euro"></i> <%= flat.price_per_night %> </li></p>
                <p> <i class="fas fa-users"></i> <%= flat.number_of_guests %> </p>
              </div>
              <div class="flat-card-actions">
                <%= link_to "More info", flat_path(flat) %>
                <%= link_to "Edit", edit_flat_path(flat) %>
                <%= link_to "Remove", flat_path(flat), method: "DELETE" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<h1> <%= link_to "Create a new flat", new_flat_path %></h1>
